---
import Layout from '../layouts/Layout.astro';

import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Products from '../components/Products.astro';
import { Icon } from 'astro-icon';
---

<Layout
  title="Estudio Jurídico Michel Campillay"
  description="Abogados corporativos en Iquique y Alto Hospicio para resolver las necesidades jurídicas de su empresa. Especialistas en derecho laboral, comercial y civil. Experiencia y conocimientos a tu servicio."
  ogTitle="Estudio Jurídico Michel Campillay"
  ogDescription="Abogados corporativos en Iquique y Alto Hospicio para resolver las necesidades jurídicas de su empresa. Especialistas en derecho laboral, comercial y civil. Experiencia y conocimientos a tu servicio."
  ogUrl="https://michelcampillay.cl/"
  canonicalURL="https://michelcampillay.cl/"
  favicon="./favicon.svg">
	<main>
		<Hero />
		<About />
        <Products />
		<Contact />
	</main>

    <button type="button" class="whatsapp-link" aria-label="Vinculo WhatsApp">
        <a href="https://wa.me/+56952365795" target="_blank" aria-label="Vinculo WhatsApp">
            <Icon name="mdi:whatsapp" width="48" height="48" />
            <p>¡Contáctanos!</p>
        </a>
    </button>
</Layout>

<style lang="scss">
    .whatsapp-link {
        all: unset;

        display: flex;
        flex-direction: column;
        position: fixed;
        bottom: 1rem;
        right: 1rem;

        z-index: 99999;

        &:is(:hover, :focus-visible) {
            a {
                width: 100%;
                height: 100%;

                p {
                    display: block;
                    padding-inline: .5rem;
                }
            }
        }



        a {
            display: flex;
            align-items: center;

            width: 48px;
            height: 48px;

            color: hsl(var(--white));
            background-color: hsl(115 70% 50%);
            border-radius: 1.5rem 1.5rem 1.5rem .25rem;
            text-decoration: none;

            svg {
                display: block;
            }

            p {
                display: none;
                white-space: nowrap;
                margin: 0;
            }
        }
    }
</style>

<script>
  import '../js/script.js';
</script>
